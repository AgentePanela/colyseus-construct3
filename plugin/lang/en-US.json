{
  "languageTag": "en-US",
  "fileDescription": "Strings for Colyseus.",
  "text": {
    "plugins": {

      "colyseus": {
        "name": "Colyseus Client",
        "description": "Colyseus Multiplayer Client",
        "help-url": "http://colyseus.io/docs",
        "properties": {
          "endpoint": {
            "name": "Endpoint",
            "desc": "Endpoint of the Colyseus server"
          }
        },
        "aceCategories": {
          "colyseus": "Client",
          "room": "Room"
        },

        "conditions": {
          "is-large-number": {
            "list-name": "Is large number",
            "display-text": "[i]{0}[/i] is a large number",
            "description": "Test if a number is greater than 100.",
            "params": {
              "number": {
                "name": "Number",
                "desc": "Number to test if greater than 100."
              }
            }
          },
          "on-open": {
            "isStatic": true,
            "list-name": "On open",
            "display-text": "On connection oppened",
            "description": "Triggered when connection with server is opened."
          },
          "on-client-error": {
            "isStatic": true,
            "list-name": "On error",
            "display-text": "On error",
            "description": "Triggered when an error happened on the server."
          },
          "on-close": {
            "isStatic": true,
            "list-name": "On close",
            "display-text": "On connection closed",
            "description": "Triggered when connection with server is closed."
          },

          "on-join-room": {
            "isStatic": true,
            "list-name": "On join",
            "display-text": "On join room {0}",
            "description": "Triggered when joined successfully into a room.",
            "params": {
              "name": {
                "name": "Room name",
                "desc": "Name of the room"
              }
            }
          },
          "on-leave-room": {
            "isStatic": true,
            "list-name": "On leave",
            "display-text": "On leave room {0}",
            "description": "Triggered when left from a room.",
            "params": {
              "name": {
                "name": "Room name",
                "desc": "Name of the room"
              }
            }
          },
          "on-room-error": {
            "isStatic": true,
            "list-name": "On error",
            "display-text": "On error {0}",
            "description": "Triggered when an error happened on the server.",
            "params": {
              "name": {
                "name": "Room name",
                "desc": "Name of the room"
              }
            }
          },
          "on-room-statechange": {
            "isStatic": true,
            "list-name": "On state change",
            "display-text": "On state of room {0} changes",
            "description": "Triggered when the state of the room changes.",
            "params": {
              "name": {
                "name": "Room name",
                "desc": "Name of the room"
              }
            }
          },
          "room-listen": {
            "isStatic": true,
            "list-name": "Listen",
            "display-text": "Listen to {1} changes on room {0} ({2})",
            "description": "Triggered when a variable at the selected path changes.",
            "params": {
              "name": {
                "name": "Room name",
                "desc": "Name of the room"
              },
              "path": {
                "name": "Path",
                "desc": "Path of the variable you'd like to listen for. e.g. \"entities/:id/:axis\""
              },
              "operation": {
                "name": "Operation",
                "desc": "Optional. You may limit to listen for \"add\", \"replace\" or \"remove\" operations on this variable."
              }
            }
          }
        },

        "actions": {
          "connect": {
            "list-name": "Connect",
            "display-text": "Connect",
            "description": "Open connection with server"
          },

          "disconnect": {
            "list-name": "Disconnect",
            "display-text": "Disconnect",
            "description": "Close connection with server"
          },

          "join-room": {
            "list-name": "Join room",
            "display-text": "Join room \"{0}\" with options {1}, {...}.",
            "description": "Join a room by name",
            "params": {
              "name": {
                "name": "Room name",
                "desc": "Room name"
              },
              "options": {
                "name": "Options",
                "desc": "The \"requestJoin\" options."
              }
            }
          },

          "room-send": {
            "list-name": "Send message",
            "display-text": "Send message {1} to room \"{0}\".",
            "description": "Send message to a room",
            "params": {
              "name": {
                "name": "Room name",
                "desc": "Name of the room"
              },
              "message": {
                "name": "Message",
                "desc": "This message will arrive at on server-side at \"onMessage\"."
              }
            }
          },

          "room-leave": {
            "list-name": "Leave room",
            "display-text": "Leave from room \"{0}\".",
            "description": "Disconnect client from the room.",
            "params": {
              "name": {
                "name": "Room name",
                "desc": "Name of the room"
              }
            }
          }
        },

        "expressions": {
          "state-value": {
            "description": "Returns a value from room's state",
            "translated-name": "State",
            "params": {
              "variable": {
                "name": "Variable",
                "desc": "Path of the variable. e.g. \"entities.\""
              }
            }
          },
          "session-id": {
            "description": "Unique sessionId of the current user",
            "translated-name": "Session Id"
          },
          "operation-add": {
            "description": "When listening for operation: add",
            "translated-name": "Add"
          },
          "operation-replace": {
            "description": "When listening for operation: replace",
            "translated-name": "Replace"
          },
          "operation-delete": {
            "description": "When listening for operation: delete",
            "translated-name": "Delete"
          }
        }
      }
    }
  }
}
